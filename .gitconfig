[alias]
    st = status -s
    sta = status
    conf = config --global --edit
    cge = config --global --edit
    cm = commit -m 
    co = checkout
    cod = checkout .
    rh = reset HEAD
    aa = add -A
	ad = add .
    cdf = clean -df
    br = branch
    bra = branch -a
    pr = pull --rebase
    amend = commit -a --amend --no-edit
    ciam = commit -a --amend --no-edit