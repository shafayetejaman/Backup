# This is Git's per-user configuration file.
[user]
	name = shafayetejaman
	email = shafayetejaman@gmail.com
[color]
	ui = auto
[http]
	postBuffer = 157286400
	version = HTTP/1.1
[pack]
	threads = 1
[core]
	autocrlf = false
	filemode = false
	editor = code --wait
	pager = 
[init]
	defaultBranch = main
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = code
[mergetool "code"]
    cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

